{% extends 'base.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}

    <div class="row">

    {% for message in messages %}


        <div class="card text-dark bg-light m-3" style="max-width: 18rem;">
            <div class="card-header">  {{ message.title }}</div>
            <div class="card-body">
                <p class="card-text"> {{ message.content }}</p>
            </div>
        </div>
    {% endfor %}

    </div>
{% endblock %}
